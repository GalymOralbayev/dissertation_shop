@model Shop.Models.ProductViewModel

<div class="album py-5">
    <div class="row">
        <div class="col-md-6 mb-4 mb-md-0">
            <div class="mdb-lightbox">
                <div class="row product-gallery mx-1">
                    <div class="col-12 mb-0">
                        <img class="card-img-top" src="@Model.ImagePath" alt="Изображение товара" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h5>@Model.Name</h5>
            <p><span class="mr-1"><strong>@Model.Price тг</strong></span></p>
            <p class="pt-1"> @Model.Description</p>
            <div class="table-responsive mb-2">
            </div>
            <a class="btn btn-info" href="/home/index?page=1" role="button">Продолжить покупки</a>
            <a class="btn btn-info" href="/cart/add/@Model.Id" role="button">Добавить в корзину</a>
        </div>
    </div>

    <div class="row">
        <h3>Рекомендации</h3>
        <div class="row">
            @foreach (var product in Model.RecProducts)
            {
                <div class="col-3 mt-4">
                    <div class="card h-100 bg-white">
                        <a asp-controller="Product" asp-route-id="@product.Id">
                            <img class="card-img-top" src="@Url.Content(product.ImagePath)" alt="Изображение товара">
                        </a>
                        <div class="card-body text-black">
                            <h4 class="card-title">
                                <a class="text-dark" asp-controller="Product" asp-route-id="@product.Id">@product.Name</a>
                            </h4>
                            <h5>@product.Price тг</h5>
                            <p class="card-text">@product.Description</p>
                        </div>
                        <div class="card-body d-flex align-items-end">
                            <a class="btn btn-info" asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id" role="button">В корзину</a>
                        </div>
                    </div>
                </div>}
        </div>
    </div>
</div>
